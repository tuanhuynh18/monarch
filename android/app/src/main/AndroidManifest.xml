<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.usr_page_test">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Include only if your app benefits from precise location access. -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <permission android:name="android.permission.PACKAGE_USAGE_STATS"/>


    <!--    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />-->
    <application>
        android:name=".user_page.LifecycleApplication"
        android:theme="@style/Theme.AppCompat.Dark"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"


        <activity
        android:name=".user_page.Activity.MainActivity"
            android:theme="@style/Theme.AppCompat.Light"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

        <activity android:name=".user_page.Activity.UserSearchActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:parentActivityName=".user_page.Activity.UserSearchActivity"
            android:label="what"
            android:launchMode="singleTask" />

        <activity android:name=".user_page.Activity.BudgetPageActivity"
            android:parentActivityName=".user_page.Activity.MainActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="receipt"
            android:exported="true"></activity>

    </application>



</manifest>