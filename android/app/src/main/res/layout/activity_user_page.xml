<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TripDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:id="@+id/create_trip_container"
            tools:ignore="Suspicious0dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ready_for_travel_text"
                android:text="Ready for a travel?"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:gravity="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_city_edit_text"
                android:layout_below="@id/ready_for_travel_text"
                android:background="#30ffffff"
                android:hint="Which city you want to visit?"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:padding="20dp"
                android:drawablePadding="20dp"
                android:backgroundTint="@android:color/black"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_budget_edit_text"
                android:layout_below="@id/input_city_edit_text"
                android:background="#30ffffff"
                android:hint="What is your budget?"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:padding="20dp"
                android:drawablePadding="20dp"
                android:backgroundTint="@android:color/black"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_start_date_edit_text"
                android:layout_below="@id/input_budget_edit_text"
                android:background="#30ffffff"
                android:hint="Start date"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:padding="20dp"
                android:drawablePadding="20dp"
                android:backgroundTint="@android:color/black"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_end_date_edit_text"
                android:layout_below="@id/input_start_date_edit_text"
                android:background="#30ffffff"
                android:hint="End date"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_margin="05dp"
                android:padding="20dp"
                android:drawablePadding="20dp"
                android:backgroundTint="@android:color/black"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/create_trip_button"
                android:layout_below="@id/input_end_date_edit_text"
                android:text="Let's go"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:id="@+id/itinerary_recycler_view"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>